<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="3" author="mokhirbek">
        <createTable tableName="variables">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="chat_id" type="BIGINT"/>
            <column name="message_id" type="INT8"/>
            <column name="variable_name" type="VARCHAR(255)"/>
            <column name="variable_value" type="INT"/>
        </createTable>
    </changeSet>

    <changeSet id="4" author="mokhirbek">
        <createIndex indexName="idx_variables_chat_msg_var" tableName="variables" unique="true">
            <column name="chat_id"/>
            <column name="message_id"/>
            <column name="variable_name"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
