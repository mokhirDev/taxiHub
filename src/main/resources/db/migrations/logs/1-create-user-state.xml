<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="mokhirbek">
        <createTable tableName="user_state">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT"/>
            <column name="locale" type="VARCHAR(50)"/>
            <column name="role" type="VARCHAR(50)"/>
            <column name="has_phone" type="BOOLEAN"/>
            <column name="has_from_location" type="BOOLEAN"/>
            <column name="has_to_location" type="BOOLEAN"/>
            <column name="has_date" type="BOOLEAN"/>
            <column name="has_seats" type="BOOLEAN"/>
            <column name="order_complete" type="BOOLEAN"/>
            <column name="current_page_code" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
